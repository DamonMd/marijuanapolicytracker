	<div class="line"><%= image_tag("buy_or_sell.png", class: "#{@state.buy_or_sell}") %> <div class="details"><%= @state.buy_or_sell_details %></div></div>
	<div class="line"><%= image_tag("growing.png", class: "#{@state.growing}") %> <div class="details"><%= @state.growing_details %></div></div>
	<div class="line"><%= image_tag("paraphernalia.png", class: "#{@state.paraphernalia}") %> <div class="details"><%= @state.paraphernalia_details %></div></div>
	<div class="line"><%= image_tag("medical.png", class: "#{@state.medical}") %> <div class="details"><%= @state.medical_details %></div></div>


</div>

