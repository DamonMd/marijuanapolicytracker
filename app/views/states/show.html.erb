<h2 class="policy">Current Marijuana Policy</h2>
<div class="for">for</div>
<h1 class="title"><%= @state.name %></h1>
<div class="status">STATUS: 

	<% if @state.possession == "legal" %> LEGALIZED
	<% elsif @state.possession == "caution" %> DECRIMINALIZED 
	<% else %> ILLEGAL
	<% end %>

</div>

<div class="follow">
<% if user_signed_in? %>
	<%= render partial: "subscriptions/form" %>
<% else %>
	<small>Sign in to subscribe to this page!</small>
<% end %>
</div>


<div class="icons">

	<div class="line"><%= image_tag("possession.png", class: "#{@state.possession}") %> <div class="details"><%= @state.possession_details %></div></div>
